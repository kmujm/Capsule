<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <TextView
        android:id="@+id/CapsuleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:text="캡슐 제목"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>
    <Button
        android:id="@+id/btn_CapsuleEdit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/edit_icon"
        app:backgroundTint="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapsuleTitle">
    </Button>
    <TextView
        android:id="@+id/CapsuleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="23dp"
        android:text="2022.05.13"
        android:textColor="#802e2e2e"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapsuleTitle"
        >
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/CapsuleImageCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapsuleDate"
        android:layout_marginTop="20dp"
        android:layout_width="365dp"
        android:layout_height="335dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/CapsuleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/capsule_item"
            app:layout_constraintStart_toStartOf="parent">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:layout_marginLeft="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/CapsuleImageCard"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.cardview.widget.CardView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CapsuleImageCard"
            android:layout_marginTop="10dp"
            android:layout_width="145dp"
            android:layout_height="145dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/CapsuleRegisterImage"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:scaleType="fitXY"
                android:src="@drawable/capsule_item"
                app:layout_constraintStart_toStartOf="parent">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>
<!--    TODO: content 보여주는 Notepad 필요 -->
</androidx.constraintlayout.widget.ConstraintLayout>